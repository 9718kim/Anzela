<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_two"
    tools:ignore="InvalidId,MissingConstraints"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:id="@+id/layout">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/top">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_close_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="24dp"
            android:id="@+id/backpressed"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="24dp"
            android:id="@+id/complete_btn"
            android:paddingEnd="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_centerInParent="true"
                android:textSize="14dp"
                android:textColor="#2a594e"
                android:background="@drawable/radius12_2a594e"
                android:gravity="center"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="완료"
                android:id="@+id/complete"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:overScrollMode="never">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="24dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:text="글작성"
                android:id="@+id/pageText"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/pageText"
                android:layout_marginTop="24dp"
                android:textStyle="normal"
                android:textSize="14dp"
                android:textColorHint="#848484"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:paddingStart="16dp"
                android:hint="[필수] 글 제목"
                android:id="@+id/titleBox"
                android:singleLine="true"
                android:maxLength="100"
                android:ellipsize="end"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="@id/titleBox"
                android:background="#848484"
                android:id="@+id/titleline"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/titleBox"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textSize="14dp"
                android:textColorHint="#848484"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="라이딩 예정일"
                android:textColor="@color/very_light_pink"
                android:id="@+id/timeBox"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calendar_white"
                app:layout_constraintTop_toTopOf="@id/timeBox"
                app:layout_constraintBottom_toBottomOf="@id/timeBox"
                app:layout_constraintEnd_toStartOf="@id/duedate"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/timeBox"
                app:layout_constraintBottom_toBottomOf="@id/timeBox"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:textStyle="normal"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:text="2021년 06월 01일"
                android:id="@+id/duedate"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/timeBox"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textSize="14dp"
                android:textColorHint="#848484"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="모집인원"
                android:textColor="@color/very_light_pink"
                android:id="@+id/personBox"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_team_white"
                app:layout_constraintTop_toTopOf="@id/personBox"
                app:layout_constraintBottom_toBottomOf="@id/personBox"
                app:layout_constraintEnd_toStartOf="@id/detailmaxperson"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/personBox"
                app:layout_constraintBottom_toBottomOf="@id/personBox"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:textStyle="normal"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:text="총 2명"
                android:id="@+id/detailmaxperson"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/personBox"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:textStyle="normal"
                android:textSize="12dp"
                android:textColor="@color/aqua_marine"
                android:text="• "
                android:id="@+id/aqua"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/aqua"
                app:layout_constraintTop_toBottomOf="@id/personBox"
                android:layout_marginTop="8dp"
                android:textStyle="normal"
                android:textSize="12dp"
                android:textColor="@color/very_light_pink"
                android:text="본인을 포함하지 않은 모집인원을 선택해주세요."/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/aqua"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textSize="14dp"
                android:textColorHint="#848484"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:textColor="@color/white"
                android:hint="[필수] 출발지"
                android:id="@+id/startP"
                android:maxLength="100"
                android:singleLine="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="@id/startP"
                android:background="#848484"
                android:id="@+id/startPline"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/startP"
                android:layout_marginTop="16dp"
                android:id="@+id/endBox">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:textStyle="normal"
                    android:textSize="14dp"
                    android:textColorHint="#848484"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:textColor="@color/white"
                    android:hint="도착지"
                    android:id="@+id/endP"
                    android:maxLength="100"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/endPcheck"
                    android:singleLine="true"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mycheck"
                    android:textStyle="normal"
                    android:textSize="14dp"
                    android:textColor="#848484"
                    android:text="정하지않음"
                    android:paddingEnd="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/endPcheck"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="@id/endBox"
                android:background="#848484"
                android:id="@+id/endPline"/>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/endBox"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:id="@+id/detailbox">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:layout_marginTop="16dp"
                    android:textStyle="normal"
                    android:textSize="14dp"
                    android:textColorHint="#848484"
                    android:gravity="top"
                    android:minHeight="350dp"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:hint="[필수] 상세내용을 입력해주세요. \n개인정보 및 번호는 유출 될 수 있으니 \n주의해서 작성해주세요."
                    android:id="@+id/detailtext"/>
            </androidx.core.widget.NestedScrollView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="@id/detailbox"
                android:background="#848484"
                android:id="@+id/detailline"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/detailbox"
                android:layout_marginTop="16dp"
                android:textStyle="normal"
                android:textSize="14dp"
                android:textColor="@color/very_light_pink"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="사진첨부 (최대 3장)"
                android:id="@+id/pictures"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:layout_constraintTop_toBottomOf="@id/pictures"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="48dp"
                android:background="@color/black"
                android:id="@+id/picturesbox"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/picturesbox"
                app:layout_constraintStart_toStartOf="@id/picturesbox"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_gallery"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>