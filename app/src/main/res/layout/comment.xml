<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="16dp"
    android:background="@drawable/radius4_black"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/top1">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/commentimg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/my_img"
            app:layout_constraintVertical_bias="0.475" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/commentimg"
            android:layout_marginStart="8dp"
            android:textStyle="normal"
            android:textSize="12dp"
            android:textColor="@color/very_light_pink"
            android:text="천왕동 불주먹"
            android:id="@+id/commentid"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:textStyle="normal"
            android:textSize="12dp"
            android:textColor="@color/very_light_pink"
            android:text="2021. 01. 31"
            android:id="@+id/commentdate"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:textStyle="normal"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:lineSpacingExtra="6dp"
        android:text="엇!! 저도 목감천 자주 타러갑니다 ㅋㅋㅋ 신청할게요~"
        android:id="@+id/commenttext"/>
</androidx.constraintlayout.widget.ConstraintLayout>