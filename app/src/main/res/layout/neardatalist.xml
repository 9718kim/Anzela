<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp"
    android:background="@drawable/radius4_black"
    tools:ignore="MissingConstraints">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:textStyle="normal"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:text="목감천 라이딩해요"
        android:id="@+id/nearrvtitle"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nearrvtitle">

        <TextView
            android:id="@+id/nearrvteam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="최대 4명"
            android:textColor="@color/very_light_pink"
            android:textSize="14dp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent" />
        <View
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:background="@color/very_light_pink"
            app:layout_constraintStart_toEndOf="@id/nearrvteam"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="7.5dp"
            android:id="@+id/nearrvline"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/nearrvline"
            android:layout_marginStart="7.5dp"
            android:textStyle="normal"
            android:textSize="14dp"
            android:textColor="@color/very_light_pink"
            android:text="예정일 : "
            android:id="@+id/date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/date"
            android:textStyle="normal"
            android:textSize="14dp"
            android:textColor="@color/very_light_pink"
            android:text="2021. 01. 31"
            android:id="@+id/nearrvdate"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>